<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:ladders="urn:import:com.theladders.gwt.client.ui">
    <ui:style>
        .important {
        	font-weight: bold;
        }
    </ui:style>

    <g:DockLayoutPanel unit="EM">
        <g:north size="5">
            <ladders:TopPanelViewImpl ui:field='topPanel' />
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:west size="128">
                    <g:HTMLPanel>
                        <h2>Navigation</h2>
                        <ul>
                            <li>
                                <g:Anchor href='javascript:;' ui:field="welcomePathLink" text="Weclome to TheLadders.com" />
                            </li>
                            <li>
                                <g:Anchor href='javascript:;' ui:field="browseJobsLink" text="Browse Jobs" />
                            </li>
                            <li>
                                <g:Anchor href='javascript:;' ui:field="uploadResumeLink" text="Upload Resume" />
                            </li>
                        </ul>
                    </g:HTMLPanel>

                </g:west>
                <g:center>
                    <g:ScrollPanel>
                        <g:SimplePanel ui:field="contentView"/>
                    </g:ScrollPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
        <g:south size="5">
            <g:Label>Footer</g:Label>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>